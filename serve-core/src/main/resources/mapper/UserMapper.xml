<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xjh.core.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.xjh.common.po.UserPO">
        <id property="userId" column="user_id"/>
        <result property="name" column="name"/>
        <result property="tag" column="tag"/>
        <result property="password" column="password" />
        <result property="email" column="email"/>
        <result property="img" column="img"/>
        <result property="sign" column="sign"/>
    </resultMap>
    <insert id="insertUser">
        insert into user(name,password,email,img)
        values(#{name},#{password},#{email},#{img})
        <selectKey keyProperty="userId" resultType="Long" order="AFTER">
            SELECT LAST_INSERT_ID();
        </selectKey>
    </insert>
    <update id="updatePasswordById">
        update user
        set password = #{password}
        where user_id = #{userId}
    </update>

    <update id="updateEmailById">
        update user
        set email = #{email}
        where user_id = #{userId}
    </update>

    <update id="updateNameById">
        update user
        set name = #{name}
        where user_id = #{userId}
    </update>
    <update id="updateImgById">
        update user
        set img = #{imgPath}
        where user_id = #{userId}
    </update>
    <update id="updateTagById">
        update user
        set tag = #{tag}
        where user_id = #{userId}
    </update>
    <update id="updateTagAndSign">
        update user
        set tag = #{tag} , sign = #{sign}
        where user_id = #{userId}
    </update>

    <select id="selectUserByName" resultMap="BaseResultMap">
        select * from user where name = #{name}
    </select>
    <select id="selectUserByEmail" resultMap="BaseResultMap">
        select * from user where email = #{email}
    </select>
    <select id="selectAccountCountByEmail" resultType="java.lang.Integer">
        select count(*) from user where email = #{email}
    </select>
    <select id="selectAccountCountByName" resultType="java.lang.Integer">
        select count(*) from user where name = #{name}
    </select>
    <select id="selectAccountCountByNameEmail" resultType="java.lang.Integer">
        select count(*) from user
        where name = #{name}  or  email = #{email}
    </select>
    <select id="selectUserList" resultMap="BaseResultMap">
        select * from user
        where user_id in
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>
    <select id="selectPlanCountById" resultType="java.lang.Integer">
        select count(*) from plan
        where user_id = #{userId}
    </select>
    <select id="selectShareCountById" resultType="java.lang.Integer">
        select count(*) from user_share
        where user_id = #{userId}
    </select>

</mapper>